{
  "name": "joybot",
  "version": "0.0.0",
  "description": "a webscrapper and all around good guy for mafia phpbb forms",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "dev": "ts-node --files src/index.ts",
    "dev:watch": "nodemon",
    "validate": "tslint --project tsconfig.json",
    "prod": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mebird/joybot.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "axios-cookiejar-support": "^1.0.0",
    "cheerio": "^1.0.0-rc.3",
    "cron": "^1.8.2",
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "form-data": "^3.0.0",
    "fs": "0.0.1-security",
    "lodash": "^4.17.19",
    "romanjs": "^2.0.1",
    "string-similarity": "^4.0.1",
    "tough-cookie": "^4.0.0",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.18",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.150",
    "@types/node": "^13.13.4",
    "@types/string-similarity": "^3.0.0",
    "@types/tough-cookie": "^4.0.0",
    "@types/uuid": "^8.0.0",
    "jest": "^25.5.4",
    "nodemon": "^2.0.3",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "exec": "npm run dev",
    "ext": "ts",
    "ignore": [
      "*.spec.ts"
    ],
    "delay": "3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/src/jobs",
      "<rootDir>/src/jobs/commands",
      "<rootDir>/src/phpbb-api",
      "<rootDir>/src/utils"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(tsx?|ts?)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?|ts?)$",
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
